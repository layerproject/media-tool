{
  "name": "layer-media-tool",
  "version": "1.0.0",
  "description": "A robust, scalable Electron application",
  "main": "dist/main/main.js",
  "scripts": {
    "webpack:build": "webpack --mode production",
    "webpack:dev": "webpack --mode development --watch",
    "ts:build": "tsc --project tsconfig.main.json",
    "ts:watch": "tsc --project tsconfig.main.json --watch",
    "build:main": "npm run ts:build",
    "build:renderer": "npm run webpack:build",
    "build:all": "npm run build:main && npm run build:renderer",
    "watch:main": "npm run ts:watch",
    "watch:renderer": "npm run webpack:dev",
    "start": "npm run build:all && electron .",
    "dev": "npm run watch:main & npm run watch:renderer & electron . --dev",
    "prebuild": "npm run build:all",
    "build": "electron-builder --dir",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all:platforms": "electron-builder -mwl",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "keywords": [
    "electron",
    "app"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fontsource/inter": "^5.0.16",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.16",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.4",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.layermediatool.app",
    "productName": "Layer Media Tool",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icons"
    }
  }
}
